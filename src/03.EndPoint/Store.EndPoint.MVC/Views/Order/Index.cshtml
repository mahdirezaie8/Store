@model List<CartItemViewModel>
@{
    Layout = "";
    ViewData["Title"] = "سبد خرید";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>سبد خرید</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
            background: #eef2ff;
            padding: 30px 0;
        }

        .cart-box {
            background: #fff;
            padding: 25px;
            max-width: 1000px;
            margin: auto;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .cart-item {
            border-bottom: 1px solid #e5e7eb;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .product-img {
            width: 95px;
            height: 95px;
            border-radius: 10px;
            object-fit: cover;
        }

        .qty-btn {
            width: 32px;
            height: 32px;
            font-weight: bold;
            padding: 0;
        }

        .total-box {
            background: #f3f4ff;
            padding: 20px;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 700;
            color: #4338ca;
        }

        .checkout-btn {
            background: #4f46e5;
            color: #fff;
            border: none;
            padding: 12px 25px;
            border-radius: 10px;
            font-size: 17px;
            transition: .2s;
        }

        .checkout-btn:hover {
            background: #3d37bd;
        }

        .empty-cart {
            text-align: center;
            font-size: 22px;
            font-weight: 600;
            color: #ef4444;
            margin-top: 40px;
        }
    </style>

</head>
<body>

<div class="cart-box">

    <h2 class="mb-4">🛒 سبد خرید</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="validation-summary"></div>
        }

    @if (Model != null && Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <div class="cart-item row align-items-center">

                <div class="col-md-2">
                    <img src="@item.Image" class="product-img" />
                </div>

                <div class="col-md-3">
                    <h5>@item.ProductName</h5>
                    <div class="text-muted">@item.UnitPrice.ToString("N0") تومان</div>
                </div>

                <div class="col-md-3">
                    <form method="get" action="/Order/Update" class="qty-form">
                        <div class="d-flex align-items-center gap-2">

                            <button type="button" class="btn btn-outline-primary qty-btn qty-plus">+</button>

                            <input type="hidden" name="productId" value="@item.ProductId" />

                            <input type="text" name="quantity" value="@item.Quantity"
                                   class="form-control text-center qty-input"
                                   style="width:60px" />

                            <button type="button" class="btn btn-outline-primary qty-btn qty-minus">−</button>

                            <input type="hidden" name="actionType" class="action-type" />
                        </div>
                    </form>
                </div>

                <div class="col-md-2 fw-bold">
                    @item.Totalprice.ToString("N0") تومان
                </div>

                <div class="col-md-2">
                        <form method="get" action="/Order/Delete">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button class="btn btn-danger btn-sm">حذف</button>
                    </form>
                </div>

            </div>
        }

        <div class="total-box mt-4">
            جمع کل: @ViewBag.Total.ToString("N0") تومان
        </div>

        <form method="post" action="/Order/Checkout" class="text-center mt-3">
            <button class="checkout-btn">تکمیل خرید</button>
        </form>
    }
    else
    {
        <div class="empty-cart">سبد خرید شما خالی است</div>
    }

    <div id="message-box" class="mt-4 text-center text-sm">
        <div style="color:red">@TempData["Error"]</div>
    </div>
</div>

<script>
    document.querySelectorAll(".qty-form").forEach(form => {

        const input = form.querySelector(".qty-input");
        const actionType = form.querySelector(".action-type");

        form.querySelector(".qty-plus").addEventListener("click", () => {
            input.value = parseInt(input.value) + 1;
            actionType.value = "increase";
            form.submit();
        });

        form.querySelector(".qty-minus").addEventListener("click", () => {
            let current = parseInt(input.value);
            if (current > 1) input.value = current - 1;
            actionType.value = "decrease";
            form.submit();
        });
    });
</script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>


