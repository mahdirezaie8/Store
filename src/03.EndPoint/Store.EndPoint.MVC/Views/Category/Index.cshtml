@using Store.Domain.Core.Dtos.CategoryDtos
@model List<ShowCategory>
@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f4f4f4;
            font-family: "IRANSans", sans-serif;
        }

        .panel-box {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.1);
            max-width: 900px;
            margin: auto;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn {
            border-radius: 8px;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <div class="panel-box">

            <h3 class="fw-bold text-center mb-4">مدیریت دسته‌بندی‌ها</h3>
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="validation-summary"></div>
            }
            <!-- Add Category -->
            <form asp-action="Create" asp-controller="Category" method="post" class="mb-4 d-flex gap-2">
                <input name="Title" class="form-control" placeholder="عنوان دسته‌بندی جدید" required />
                <button class="btn btn-success px-3">افزودن</button>
            </form>

            <!-- Category List -->
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>عنوان</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                @if (Model != null && Model.Count > 0)
{
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>

                            <td>
                                <a href="/Category/Update/@item.Id" class="btn btn-primary btn-sm">ویرایش</a>

                                <form action="/Category/Delete/@item.Id" method="get" style="display:inline;">
                                    <button class="btn btn-danger btn-sm"
                                            onclick="return confirm('حذف این دسته‌بندی؟');">
                                        حذف
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                }
                else
                {
                    <div class="text-center text-danger mt-4">
                        هیچ دسته بندی یافت نشد.
                    </div>
                }
            </table>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

