@model RegisterViewModel
@{
    ViewData["Title"] = "ثبت‌نام";
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #f5f7fa, #e4e9f0);
        }

        .card {
            background: #ffffff;
            width: 420px;
            padding: 35px;
            border-radius: 14px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            border: 1px solid #e2e4ea;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 700;
            color: #4f46e5;
        }

        .form-group {
            margin-bottom: 14px;
        }

        label {
            font-weight: 600;
            margin-bottom: 6px;
            display: block;
            color: #444;
        }

        input {
            width: 100%;
            padding: 10px 12px;
            border-radius: 8px;
            border: 1px solid #cfd3df;
            background: #fafbfe;
            font-size: 15px;
        }

        .btn-register {
            width: 100%;
            padding: 12px;
            border: none;
            background: #7c5dfa;
            color: white;
            font-weight: 700;
            font-size: 16px;
            border-radius: 10px;
            cursor: pointer;
            margin-top: 10px;
        }

        .error {
            color: #dd3c3c;
            font-size: 14px;
            margin-top: 4px;
        }

        .login-link {
            text-align: center;
            margin-top: 15px;
        }

            .login-link a {
                color: #7c5dfa;
                font-weight: 600;
                text-decoration: none;
            }
    </style>
</head>

<body>

    <div class="card">

        <h2>ثبت‌نام</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="validation-summary"></div>
        }

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" placeholder="نام و نام خانوادگی" />
                <span asp-validation-for="FullName" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" placeholder="نام کاربری" />
                <span asp-validation-for="Username" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="error"></span>
            </div>

            <button type="submit" class="btn-register">ثبت‌نام</button>
        </form>

        <div class="login-link">
            قبلاً ثبت‌نام کرده‌اید؟
            <a asp-action="Login">ورود</a>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>

