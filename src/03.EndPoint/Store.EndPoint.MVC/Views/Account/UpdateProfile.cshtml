@model UpdateProfileViewModel
@{
    ViewData["Title"] = "ویرایش اطلاعات";
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #eef2ff, #dbeafe);
            margin: 0;
            padding: 40px;
        }

        .container {
            max-width: 520px;
            margin: auto;
        }

        .btn-back {
            display: inline-block;
            margin-bottom: 16px;
            background: cornflowerblue;
            color: white;
            padding: 10px 18px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.2s;
        }

            .btn-back:hover {
                background: #4f6fe0;
            }

        .card {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(6px);
            border-radius: 28px; /* 👈 نه مستطیل */
            padding: 32px;
            box-shadow: 0 20px 40px rgba(0,0,0,.1);
        }

        .title {
            text-align: center;
            font-size: 22px;
            font-weight: 700;
            color: #1e3a8a;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 18px;
        }

        label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 6px;
            display: block;
        }

        .hint {
            font-size: 13px;
            color: #6b7280;
            margin-bottom: 6px;
        }

        input {
            width: 100%;
            padding: 12px 14px;
            border-radius: 14px;
            border: 1px solid #d1d5db;
            background: #f9fafb;
            font-size: 14px;
            outline: none;
            transition: .2s;
        }

            input:focus {
                border-color: #6366f1;
                background: #ffffff;
                box-shadow: 0 0 0 3px rgba(99,102,241,.15);
            }

        .divider {
            margin: 28px 0;
            border-top: 1px dashed #c7d2fe;
        }

        .btn-submit {
            width: 100%;
            background: #4f46e5;
            color: white;
            border: none;
            padding: 14px;
            border-radius: 18px;
            font-weight: 700;
            font-size: 15px;
            cursor: pointer;
            transition: .2s;
        }

            .btn-submit:hover {
                background: #4338ca;
            }

        .validation-summary {
            background: #ffe5e5;
            color: #b40000;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 12px;
            border: 1px solid #ffcccc;
        }
    </style>
</head>

<body>

    <div class="container">

        <a asp-controller="Account"
           asp-action="Profile"
           class="btn-back">
            ⬅ بازگشت
        </a>

        <div class="card">

            <div class="title">ویرایش اطلاعات کاربری</div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="validation-summary"></div>
            }

            <form asp-action="UpdateProfile" method="post">
                <input type="hidden" asp-for="UserId" />
                <!-- Full Name -->
                <div class="form-group">
                    <label asp-for="FullName" class="form-label"></label>

                    <input asp-for="FullName"
                           class="form-control"
                           value=""
                           placeholder="@Model.FullName" />

                    <span asp-validation-for="FullName" class="text-danger"></span>

                </div>

                <!-- Username -->
                <div class="form-group">
                    <label asp-for="UserName" class="form-label"></label>

                    <input asp-for="UserName"
                           class="form-control"
                           value=""
                           placeholder="@Model.UserName" />

                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>

                    <input asp-for="Email"
                           class="form-control"
                           value=""
                           placeholder="@Model.Email" />

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="divider"></div>

                <!-- Password -->
                <div class="form-group">
                    <label>رمز عبور فعلی</label>
                    <label asp-for="CurrentPassword" class="form-label"></label>

                    <input asp-for="CurrentPassword"
                           class="form-control"
                           value=""
                           placeholder="@Model.CurrentPassword" />

                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label"></label>

                    <input asp-for="NewPassword"
                           class="form-control"
                           value=""
                           placeholder="@Model.NewPassword" />

                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmNewPassword" class="form-label"></label>

                    <input asp-for="ConfirmNewPassword"
                           class="form-control"
                           value=""
                           placeholder="@Model.ConfirmNewPassword" />

                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-submit">
                    ذخیره تغییرات
                </button>

            </form>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>





