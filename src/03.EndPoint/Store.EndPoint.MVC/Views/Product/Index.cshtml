@using Store.Domain.Core.Dtos.ProductDtos
@model List<DetailProductDto>
@{
    ViewData["Title"] = "مدیریت محصولات";
    Layout = "";
    int counter = 1;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
        .btn-add-product {
            background: #28a745;
            color: white !important;
            padding: 10px 22px;
            border-radius: 10px;
            font-size: 15px;
            font-weight: bold;
            transition: 0.25s;
            text-decoration: none;
            box-shadow: 0 3px 10px rgba(0, 128, 0, 0.25);
        }

            .btn-add-product:hover {
                background: #218838;
                box-shadow: 0 4px 12px rgba(0, 128, 0, 0.35);
                transform: translateY(-2px);
            }
    </style>
</head>
<body>

<div class="container mt-4">

    <h2 class="fw-bold mb-4 text-center">مدیریت محصولات</h2>
        <div class="d-flex justify-content-end mb-4">
            <a asp-action="Create" asp-controller="Product" class="btn-add-product">
                + افزودن محصول
            </a>
        </div>

    @if(Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            هیچ محصولی یافت نشد.
        </div>
    }
    else
    {
            <div id="message-box" class="mt-4 text-center text-sm">
                <div style="color:red">@TempData["Error"]</div>
            </div>
        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ردیف</th>
                        <th>تصویر</th>
                    <th>نام محصول</th>
                    <th>قیمت</th>
                    <th>تعداد موجودی</th>
                    <th>توضیحات</th>
                    <th width="200">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="@item.Image" width="60" height="60" style="object-fit:cover;border-radius:6px" />
                            }
                            else
                            {
                                <span class="text-muted">ندارد</span>
                            }
                        </td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("N0") تومان</td>
                            <td>@item.Count</td>
                            <td>@item.Description</td>
                        <td class="d-flex flex-column gap-2">
                                <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" asp-route-page="@ViewBag.Page" class="btn btn-sm btn-primary">
                                ویرایش
                            </a>

                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" asp-route-page="@ViewBag.Page" class="btn btn-sm btn-danger" onclick="return confirm('آیا مطمئن هستید که حذف شود؟');">
                                حذف
                            </a>

                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#countModal" onclick="setProductId(@item.Id, @item.Count)">
                                تغییر تعداد
                            </button>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>

        <!-- Pagination -->
        <nav aria-label="صفحه بندی" class="mt-3">
            <ul class="pagination justify-content-center">
                @if (ViewBag.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page - 1 })">قبلی</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                @if (ViewBag.Page < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page + 1 })">بعدی</a>
                    </li>
                }
            </ul>
        </nav>
    }

</div>

<!-- Modal تغییر تعداد -->
<div class="modal fade" id="countModal" tabindex="-1" aria-labelledby="countModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="UpdateCount" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="countModalLabel">تغییر تعداد محصول</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column gap-2">
                <input type="hidden" id="modalProductId" name="id" value="" />
                <input type="hidden" name="page" value="@ViewBag.Page" />
                <label for="modalCount" class="form-label">تعداد جدید:</label>
                <input type="number" class="form-control" id="modalCount" name="count" min="0" value="0" required />
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success">ذخیره</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function setProductId(id, count) {
        document.getElementById('modalProductId').value = id;
        document.getElementById('modalCount').value = count;
    }
</script>

</body>
</html>



