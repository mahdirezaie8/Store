@using Store.Domain.Core.Dtos.ProductDtos
@model UpdateProductDto
@{
    ViewData["Title"] = "ویرایش محصول";
    Layout = "";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f6f6f6;
            font-family: "IRANSans", sans-serif;
        }
        .edit-container {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            max-width: 700px;
        }
        .form-control::placeholder {
            color: #999 !important;
        }
    </style>
</head>

<body>

<div class="container mt-5 mb-5 d-flex justify-content-center">
    <div class="edit-container">

        <h2 class="mb-4 text-center fw-bold">ویرایش محصول</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }

        <form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="page" value="@ViewBag.Page" />

            <!-- NAME -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>

                <input asp-for="Name"
                       class="form-control"
                       value=""
                       placeholder="@Model.Name" />

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- PRICE -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>

                <input asp-for="Price"
                       type="number"
                       class="form-control"
                       value=""
                       placeholder="@Model.Price" />

                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- DESCRIPTION -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>

                    <input asp-for="Description"
                              class="form-control"
                              value=""
                              placeholder="@Model.Description"/>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

            <!-- IMAGE -->
            <div class="mb-3">
                <label asp-for="ProfileImage" class="form-label"></label>

                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <div class="mb-2 text-center">
                        <img src="@Model.Image" width="200" />
                    </div>
                }

                <input asp-for="ProfileImage" type="file" class="form-control" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" asp-controller="Product" asp-route-page="@ViewBag.Page"
                   class="btn btn-secondary px-4">بازگشت</a>

                <button type="submit" class="btn btn-primary px-4">ذخیره تغییرات</button>
            </div>

        </form>

    </div>
</div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


</body>
</html>






