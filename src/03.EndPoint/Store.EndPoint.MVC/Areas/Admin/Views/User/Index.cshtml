@using Store.Domain.Core.Dtos.UserDtos
@model List<ShowUserDto>
@{
    ViewData["Title"] = "مدیریت کاربران";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
            background: linear-gradient(135deg, #eef2ff, #dbeafe);
            margin: 0;
            padding: 30px;
        }

        .card {
            background: #fdfdff;
            border-radius: 14px;
            padding: 25px;
            box-shadow: 0 8px 18px rgba(0,0,0,.07);
        }

        h2 {
            margin-bottom: 20px;
            color: #4f46e5;
            font-weight: 700;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            background: #eef1ff;
            padding: 12px;
            font-weight: 700;
        }

        td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #e4e7f0;
        }

        tr:hover {
            background: #f7f9ff;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 14px;
            border: none;
            cursor: pointer;
        }

        .btn-danger {
            background: #ef4444;
            color: white;
        }

        .btn-active {
            background: #3b82f6; /* آبی */
            color: white;
        }

        .btn-inactive {
            background: #dc2626; /* قرمز */
            color: white;
        }

        .role {
            font-weight: 600;
        }
    </style>
</head>

<body>

    <div class="card">

        <h2>مدیریت کاربران</h2>
        <div id="message-box" class="mt-4 text-center text-sm">
            <div style="color:red"> @TempData["Error"]</div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>نام و نام خانوادگی</th>
                    <th>نام کاربری</th>
                    <th>ایمیل</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                }

                @foreach (var user in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@user.FullName</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>

                        <td>
                            @if (user.IsActive)
                            {
                                <span style="color:#2563eb;font-weight:600;">فعال</span>
                            }
                            else
                            {
                                <span style="color:#dc2626;font-weight:600;">غیرفعال</span>
                            }
                        </td>

                        <td>
                            <form asp-area="Admin"
                            asp-controller="User"
                                asp-action="ToggleActive"
                                  asp-route-id="@user.Id"
                                  method="get"
                                  style="display:inline;">
                                <button type="submit"
                                        class="btn @(user.IsActive ? "btn-inactive" : "btn-active")">
                                    @(user.IsActive ? "غیرفعال" : "فعال")
                                </button>
                            </form>

                            <form asp-area="Admin"
                                  asp-controller="User"
                                asp-action="Delete"
                                  asp-route-id="@user.Id"
                                  method="get"
                                  style="display:inline;"
                                  onclick="return confirm('آیا کاربر حذف شود؟');">
                                <button type="submit" class="btn btn-danger">
                                    حذف
                                </button>
                            </form>
                        </td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>

    </div>

</body>
</html>

