@using Store.EndPoint.MVC.Areas.Admin.Models
@model CreateProductViewModel
@{
    ViewData["Title"] = "ایجاد محصول";
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f2f2f2;
            font-family: "IRANSans", sans-serif;
        }

        .create-box {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.15);
            max-width: 700px;
            margin: auto;
        }

        .form-control, .form-select {
            border-radius: 8px;
        }
    </style>
</head>

<body>

    <div class="container mt-5">

        <div class="create-box">
            <h3 class="text-center mb-4 fw-bold">ایجاد محصول جدید</h3>

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <form asp-area="Adnin" asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">نام محصول</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">قیمت</label>
                    <input asp-for="Price" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Count" class="form-label">تعداد موجودی</label>
                    <input asp-for="Count" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">توضیحات</label>
                    <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">دسته‌بندی</label>

                    <select asp-for="CategoryId" class="form-select">
                        <option value="">انتخاب کنید...</option>

                        @foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat.Id">@cat.Title</option>
                        }
                    </select>

                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">تصویر محصول</label>
                    <input asp-for="ProfileImage" type="file" class="form-control" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-controller="Product" class="btn btn-secondary px-4">بازگشت</a>
                    <button type="submit" class="btn btn-primary px-4">ثبت محصول</button>
                </div>

            </form>

        </div>

    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
